NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# MongoDB
MONGODB_URI=mongodb://taxi_user:taxi_password_123@localhost:27017/taxi-vtc?authSource=admin
MONGODB_USER=taxi_user
MONGODB_PASSWORD=taxi_password_123

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_123
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-12345
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-12345
JWT_REFRESH_EXPIRATION=7d

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIRECTORY=./uploads

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8081,http://localhost:3001

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@taxi-vtc.app

# Payment Gateway (Optional)
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook

# Maps/Location Service
GOOGLE_MAPS_API_KEY=your-google-maps-key

# Admin Panel
ADMIN_PANEL_URL=http://localhost:3001
ADMIN_DEFAULT_PASSWORD=admin@123

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Environment
ENVIRONMENT=development
